<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Pokedex</title>
</head>

<body>
    <%- include("partials/header.ejs") %>

        <div class="container d-flex justify-content-center flex-column">
            <h1 class="text-center">
                <%= title %>
            </h1>

            <ul class="d-flex justify-content-center flex-wrap">
                <% if(locals.pokeArray) { pokeArray.forEach( pokemon=> { %>

                    <div class="card text-center m-3" style="width: 18rem;">
                        <img src=<%=pokemon.image %> class="card-img-top" alt="imageOfPokemon">
                        <div class="card-body" style="background-color: aqua;">
                            <h5 class="card-title">
                                <%= pokemon.name %>
                            </h5>
                            <p class="card-text">Type: <%= pokemon.types[0].type.name %>
                            </p>
                            <a href="#" class="btn btn-primary">See more</a>
                        </div>
                    </div>

                    <% })}; %>
            </ul>


            <form method="post">
                <nav aria-label="Page navigation example">
                    <ul class="pagination d-flex justify-content-center">
                        <li class="page-item"><input type="submit" value="1" class="page-link" formaction="/page/0">
                        </li>
                        <li class="page-item"><input type="submit" value="2" class="page-link" formaction="/page/10">
                        </li>
                        <li class="page-item"><input type="submit" value="3" class="page-link" formaction="/page/20">
                        </li>
                    </ul>
                </nav>
            </form>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</body>

</html>